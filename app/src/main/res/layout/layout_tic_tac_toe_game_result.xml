<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="?android:colorBackground">

    <LinearLayout
        android:id="@+id/linearLayout_ticTacToeGameResult_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_ticTacToeGameResult_playerX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:textAppearance="?textAppearanceHeadline2"
            android:text="@string/ticTacToeGameResult_player_x" />

        <TextView
            android:id="@+id/textView_ticTacToeGameResult_playerO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:textAppearance="?textAppearanceHeadline2"
            android:text="@string/ticTacToeGameResult_player_o" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_ticTacToeGameResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?textAppearanceHeadline3"
        tools:text="@string/ticTacToeGameResult_draw" />

</LinearLayout>